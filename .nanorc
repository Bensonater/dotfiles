set linenumbers
set autoindent
set nonewlines
set atblanks
set nohelp
set softwrap
set tabsize 4
set tabstospaces
set historylog
set zap
set indicator
set minibar
set mouse
set speller "aspell -x -c"

include "/usr/share/nano/*.nanorc"

bind ^C copy main
bind ^V paste main
bind ^F whereis all
bind ^S savefile main
bind ^Z undo all
bind ^Y redo all